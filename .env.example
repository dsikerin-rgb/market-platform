APP_NAME="Market Platform"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ----------------------------
# Database
# ----------------------------
# Local quick start (SQLite)
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# Staging/Production (PostgreSQL) - switch to this block
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=market_platform
# DB_USERNAME=market_platform
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# ----------------------------
# Queue / Cache
# ----------------------------
# Local default (simple)
QUEUE_CONNECTION=database
CACHE_STORE=database

# Staging/Production recommended (Redis)
# QUEUE_CONNECTION=redis
# CACHE_STORE=redis

CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

# ----------------------------
# Redis
# ----------------------------
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Optional: separate queue connection/name
# REDIS_QUEUE_CONNECTION=default
# REDIS_QUEUE=default
# REDIS_QUEUE_RETRY_AFTER=90

# ----------------------------
# Horizon (Queue dashboard) - planned
# ----------------------------
# HORIZON_PREFIX=market_platform:
# HORIZON_DOMAIN=null
# HORIZON_PATH=horizon

# ----------------------------
# Telescope (debug dashboard) - planned
# ----------------------------
TELESCOPE_ENABLED=false

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"